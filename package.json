{
  "name": "keep-audio-alive",
  "version": "1.0.1",
  "description": "A simple electron application to keep audio devices alive and prevent the annoying audio pops",
  "main": "./out/main/index.js",
  "author": "Estella",
  "homepage": "https://github.com/TarnishedStella/keep-audio-alive",
  "packageManager": "yarn@4.4.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "yarn typecheck:node && yarn typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev --watch",
    "build": "yarn typecheck && electron-vite build",
    "build-force": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "yarn run build && electron-builder --dir",
    "build:win": "yarn build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "release": "yarn electron-builder"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^3.1.3",
    "@reduxjs/toolkit": "^2.2.7",
    "@tanstack/react-query": "^5.51.23",
    "@tanstack/react-router": "^1.48.1",
    "electron-log": "^5.1.7",
    "electron-updater": "6.3.4",
    "howler": "^2.2.4",
    "keep-audio-alive": "file:",
    "react-hot-toast": "^2.4.1",
    "react-redux": "^9.1.2",
    "sound-play": "^1.1.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^2.0.0",
    "@electron-toolkit/eslint-config-ts": "^2.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@tanstack/router-devtools": "^1.48.1",
    "@tanstack/router-plugin": "^1.47.0",
    "@types/howler": "^2",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/sound-play": "^1",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.3",
    "prettier": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-plugin-static-copy": "^1.0.6"
  }
}
